<style>
.jumbotron {
  background-image:url('http://news.yzz.cn/public/images/100922/68_141930_1.jpg');
  background-repeat: no-repeat;
  background-size: cover;
  padding-bottom: 110px;

}
</style>

<div class="jumbotron ">
  <br><br><br><br><br><br><br><br><br><br><br><br>

</div>
<div class="col-md-12">
  <div class="dropdown clearfix pull-right">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        排序方式
          <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
          <li> <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %> </li>
          <li> <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %> </li>
          <li> <%= link_to("按照发表时间排序", jobs_path ) %> </li>
      </ul>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <td>#</td>
        <td>职位</td>
        <td>薪资上限</td>
        <td>薪资下限</td>
        <td>发布时间</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
